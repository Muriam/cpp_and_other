#include <cmath>
#include <iostream>
#include <conio.h>
#include <locale>


using namespace std;

int func(int); //уравнение



int main()
{
	setlocale(LC_ALL, "rus");
	
	
	int D, rootD, a = 3, b = -6, c = -24, a1, a2;
	int x;
	

	D = pow(b,2) - 4 * a * c; 
	rootD = sqrt(D);
	cout << "дискриминант = " << D << endl;
	cout << "корень из дискриминанта = " << rootD << endl;
	a1 = (-b + rootD) / (2*a);
	a2 = (-b - rootD) / (2*a);
	cout << "корень1 = " << a1 << endl;
	cout << "корень2 = " << a2 << "\n\n";

////////////////////////////////////////////////////////////////////


	x=func(a1);
	cout << "x1 = " << x << endl;
	x=func(a2);
	cout << "x2 = " << x << endl;


	getch();
	return 0;	
}


int func(int x)
{
	return pow(x,2) + 1;
}
